&amp;gt;
&amp;gt; &#160;r1 &#160; &#160; &#160; &#160; &#160; &#160; &#160; &#160; &#160; &#160; &#160; &#160; &#160;column=cf:counter, timestamp=1268406376222,
&amp;gt; value=\x00\x00\x00\x00\x00\x00\x00\x0
